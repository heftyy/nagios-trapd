{
  "if-mib-link-down-trap-handler": {
    "trap": {
      "type": [
        "IF-MIB",
        "linkDown"
      ],
      "args": {
        "index": [
          "IF-MIB",
          "ifIndex"
        ]
      }
    },
    "event": {
      "name": "{hostname} link down",
      "output": "interface {index} down",
      "handlers": [
        "snmp_trap"
      ],
      "severity": "CRITICAL"
    }
  },
  "if-mib-link-up-trap-handler": {
    "trap": {
      "type": [
        "IF-MIB",
        "linkUp"
      ],
      "args": {
        "first": [
          "IF-MIB",
          "ifIndex"
        ]
      }
    },
    "event": {
      "name": "{hostname} link up",
      "output": "interface {index} up",
      "handlers": [
        "snmp_trap"
      ],
      "severity": "OK"
    }
  }
}
